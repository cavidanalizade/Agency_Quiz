@using App.Core
@model IEnumerable<Project>
<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Table</h6>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Create Time</th>
                    <th scope="col">
                        <a class="btn btn-primary" asp-controller="project" asp-action="Create">Create</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@item.Title</td>
                        <td>@item.CategoryName</td>
                        <td><img src="~/Upload/Project/@item.ImageUrl" style="width:50px;height:50px"></img></td>
                        <td>@item.CreatedAt</td>
                        <td>       
                            <a class="btn btn-primary" asp-controller="project" asp-action="delete" asp-route-id="@item.Id">delete</a>
                            <a class="btn btn-primary" asp-controller="project" asp-action="update" asp-route-id="@item.Id">update</a>
                        </td>
                        
                    </tr>
                    
                }

            </tbody>
        </table>
    </div>
</div>
